{
  "name": "trust-and-quality",
  "version": "0.1.0",
  "description": "hipages trust and quality monorepo",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "ts-node": "ts-node -r tsconfig-paths/register -T",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/apps/licencing/src/main.js",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "lint": "eslint \"{apps,libs}/**/*.[jt]s\"",
    "lint:fix": "yarn lint --fix",
    "test": "TZ=UTC jest",
    "test:watch": "TZ=UTC jest --watch",
    "test:cov": "TZ=UTC jest --coverage",
    "test:debug": "TZ=UTC node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "TZ=UTC jest --config jest-e2e.config.ts --forceExit",
    "prepare": "husky install"
  },
  "resolutions": {
    "axios": "^1.6.0",
    "protobufjs": "^7.2.4",
    "semver": "^7.5.2",
    "webpack": "^5.74.0",
    "follow-redirects": "^1.15.4"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.0",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.4.0",
    "@nestjs/microservices": "^8.4.0",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^8.4.0",
    "@nestjs/schedule": "^2.2.3",
    "@nestjs/swagger": "^5.2.1",
    "@nestjs/typeorm": "8.0.2",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "express": "^4.17.3",
    "jwks-rsa": "^3.0.1",
    "lodash": "^4.17.21",
    "nestjs-pino": "^2.4.0",
    "pino-http": "^6.5.0",
    "prom-client": "^14.0.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.0.0",
    "rxjs": "^7.2.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/lodash": "^4.14.178",
    "@types/node": "^24.3.0",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^5.35.0",
    "@typescript-eslint/parser": "^5.28.0",
    "ajv": "^8.17.1",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^26.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.5",
    "lodash": "^4.17.21",
    "pg": "^8.7.1",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.12.0",
    "typeorm": "^0.2.34",
    "typeorm-naming-strategies": "^2.0.0",
    "typescript": "~4.8.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(axios)/)"
    ],
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/index.ts",
      "!**/main.ts",
      "!**/main.*.ts",
      "!**/*.interface.ts",
      "!**/*.interfaces.ts",
      "!**/*.config.ts",
      "!**/*.module.ts",
      "!**/*.constants.ts",
      "!**/*.e2e-spec.ts",
      "!**/*.dto.ts",
      "!**/*.test-utils.ts",
      "!**/*.spec.ts",
      "!**/*.mock.ts",
      "!apps/*/test/*.*"
    ],
    "coveragePathIgnorePatterns": [
      ".*/node_modules/.*",
      ".*/generated/.*",
      ".*/bin/.*",
      ".*/apps/[^/]+/test/.*"
    ],
    "coverageDirectory": "./coverage/unit",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/api(|/.*)$": "<rootDir>/apps/api/src/$1",
      "^@app/licencing(|/.*)$": "<rootDir>/apps/licencing/src/$1",
      "^@lib/shared(|/.*)$": "<rootDir>/libs/shared/src/$1"
    }
  },
  "lint-staged": {
    "*.[jt]s": "eslint --cache --fix"
  }
}
