{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/licence-schema",
  "type": "object",
  "required": ["groups", "categories"],
  "additionalProperties": false,
  "properties": {
    "groups": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "required": ["name", "min_required", "state", "authority", "classes"],
          "additionalProperties": false,
          "properties": {
            "name": { "type": "string" },
            "min_required": { "type": "integer", "minimum": 1 },
            "state": { "type": "string" },
            "authority": {
              "type": "object",
              "required": ["name", "abn_conditions"],
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string" },
                "abn_conditions": {
                  "type": "object",
                  "required": ["company", "individual", "partnership", "trust"],
                  "additionalProperties": false,
                  "properties": {
                    "company":     { "type": "string" },
                    "individual":  { "type": "string" },
                    "partnership": { "type": "string" },
                    "trust":       { "type": "string" }
                  }
                }
              }
            },
            "classes": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "is_parent", "states"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string" },
          "sub_category_name": { "type": "string" },
          "is_parent": { "type": "boolean" },
          "states": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
              "^[A-Z]{2,3}$": {
                "type": "object",
                "required": ["licence_required", "licence_note", "groups"],
                "additionalProperties": false,
                "properties": {
                  "licence_required": { "type": ["boolean", "null"] },
                  "licence_note": { "type": "string" },
                  "groups": {
                    "type": "array",
                    "items": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
